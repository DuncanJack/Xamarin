<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:TheScaleTransform"
            x:Class="TheScaleTransform.MyTabbedPage">

    <NavigationPage Title="Basic">
        <x:Arguments>
            <local:BasicScalePage Title="Basic Scale"/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Centered">
        <x:Arguments>
            <local:CenteredScalePage Title="Centered Scale"/>
        </x:Arguments>
    </NavigationPage>

</TabbedPage>
