<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GridTutorial.A">

    <ContentPage.Resources>
        <Style TargetType="{x:Type Grid}">
            <Setter Property="BackgroundColor" Value="PowderBlue"/>
        </Style>
    </ContentPage.Resources>

    <Grid Margin="20,35,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Text="Column 0, Row 0"/>
        <Label Grid.Column="1" Grid.Row="0" Text="Column 1, Row 0"/>
        <Label Grid.Column="0" Grid.Row="1" Text="Column 0, Row 1"/>
        <Label Grid.Column="1" Grid.Row="1" Text="Column 1, Row "/>
    </Grid>

</ContentPage>
