<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="StackLayoutTutorial.B">
    <StackLayout Margin="20,35,20,25"
                 Orientation="Horizontal">

        <!-- VerticalOptions -->
        <Label Text="Start"
               VerticalOptions="Start"
               BackgroundColor="Gray"/>
        <Label Text="Center"
               VerticalOptions="Center"
               BackgroundColor="Gray"/>
        <Label Text="End"
               VerticalOptions="End"
               BackgroundColor="Gray"/>
        <Label Text="Fill"
               VerticalOptions="Fill"
               BackgroundColor="Gray"/>

        <!-- Horizontal Options -->
        <Label Text="SE"
               HorizontalOptions="StartAndExpand"
               BackgroundColor="Gray"/>
        <Label Text="CE"
               HorizontalOptions="CenterAndExpand"
               BackgroundColor="Gray"/>
        <Label Text="EE"
               HorizontalOptions="EndAndExpand"
               BackgroundColor="Gray"/>
        <Label Text="FE"
               HorizontalOptions="FillAndExpand"
               BackgroundColor="Gray"/>
    </StackLayout>
</ContentPage>
